{
    "compilerOptions": {
        "target": "es6",
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": true,
        "removeComments": false,
        "rootDir": "old/src",
        "outDir": "./lib",
        "baseUrl": ".",
        "paths": {
            "jsonld": [
                "types/jsonld.d.ts"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "lib",
        "old/test",
        "old/src/old"
    ],
    "compileOnSave": false,
    "buildOnSave": false
}